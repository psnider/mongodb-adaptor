{
  "name": "mongodb-adaptor",
  "version": "0.0.1",
  "description": "A database adaptor for using MongoDB.",
  "main": "generated/src/ts/MongoDBAdaptor.js",
  "keywords": [],
  "private": false,
  "scripts": {
    "postinstall": "typings install && npm run link-MongoDBAdaptor-if-needed",
    "link-MongoDBAdaptor-if-needed": "[[ ! -e node_modules ]] || [[ -e node_modules/MongoDBAdaptor ]] || ln -s .. node_modules/MongoDBAdaptor",
    "reinstall": "rm -fr node_modules typings && npm install",
    "clean": "rm -fr generated",
    "build": "tsc -p .",
    "test": "npm run build && NODE_PATH=.:generated/src/ts   mocha -R spec generated/test/ts/MongoDBAdaptor.tests.js"
  },
  "author": {
    "name": "Peter Snider",
    "email": "snider.peter@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "configure-local": "github:psnider/configure-local",
    "document-database-if": "github:psnider/document-database-if",
    "document-database-tests": "github:psnider/document-database-tests",
    "mongod-runner": "github:psnider/mongod-runner",
    "mongoose": "^4.6.0",
    "mongoose-connector": "github:psnider/mongoose-connector",
    "pino": "^2.10.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.0.2",
    "tmp": "0.0.28",
    "typescript": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:psnider/mongodb-adaptor.git"
  },
  "typings": "./MongoDBAdaptor.d.ts"
}
